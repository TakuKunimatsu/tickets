 <%= render "shared/header" %>

<div class= 'container'>
  <div class="row mx-auto" style="width: 80%;">
    <h4>＜編集する公演回＞</h4>
    <div class="alert alert-info" role="alert">
    販売を開始している公演回を編集、削除する場合は注意してください
    </div>
    <%= form_with model:[@performance, @schedule], url: performance_schedule_path, local: true do |f| %>
    <p class="fs-4">
      <%= @schedule.performance_day %>:<%= @schedule.performance_time.strftime('%k:%M') %>
    </p>
    <div class="col-xs-6 col-xs-offset-3">
     <%= f.radio_button :start_of_sales, :true %>
     <%= f.label :start_of_sales, "販売開始" %><br />
     <%= f.radio_button :start_of_sales, :false %>
     <%= f.label :checked, "販売停止" %><br />
      <table class="table">
        <thead>
          <tr>
            <th>公演日</th>
            <th>公演時間</th>
            <th>座席数</th>
          </tr>
        </thead>
        <tbody class="bulk-registration-form">
          <tr class="item">
            <td>
              <%= f.date_field :performance_day, class: 'form-control' %>
            </td>
            <td>
              <%= f.time_field :performance_time, class: 'form-control' %>
            </td>
            <td>
              <%= f.number_field :stock, class: 'form-control' %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="text-center">
        <%= f.submit '公演を編集する', class: 'btn btn-outline-dark' %>
        <button type="button" class= "btn btn-lg"><%= link_to "公演を削除する", performance_schedule_path, method: :delete, class:"btn btn-outline-dark" %></button>
      </div>
    <% end %>
  </div>
</div>  